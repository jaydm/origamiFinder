<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/txtInfoBookISBN"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip" >

    <TextView
        android:id="@+id/txtLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/info_model_name" />

    <TextView
        android:id="@+id/sbISBNLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtLoading"
        android:layout_below="@+id/txtLoading"
        android:text="@string/info_model_creator" />

    <TextView
        android:id="@+id/sbShowModelCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/sbISBNLabel"
        android:layout_below="@+id/sbISBNLabel"
        android:text="@string/info_book_title" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/sbShowModelCount"
        android:layout_below="@+id/sbShowModelCount"
        android:text="@string/info_model_difficulty" />

    <TextView
        android:id="@+id/txtInfoModelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtLoading"
        android:layout_alignBottom="@+id/txtLoading"
        android:layout_toRightOf="@+id/txtLoading"
        android:text="Model Name" />

    <TextView
        android:id="@+id/txtInfoModelCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sbISBNLabel"
        android:layout_alignBottom="@+id/sbISBNLabel"
        android:layout_alignLeft="@+id/txtInfoModelName"
        android:text="Model Creator" />

    <TextView
        android:id="@+id/txtInfoBookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sbShowModelCount"
        android:layout_alignBottom="@+id/sbShowModelCount"
        android:layout_alignLeft="@+id/txtInfoModelCreator"
        android:text="Book Title" />

    <TextView
        android:id="@+id/txtInfoModelDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:text="Model Difficulty" />

    <TextView
        android:id="@+id/txtModelID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

</RelativeLayout>